---
interface Props {
    id: number; 
    title: string;
    description: string;
    price: string;
    category: string;
    type?: string; 
    image?: string;
}

const { id, title, description, price, category, type } = Astro.props;

// LOGIKA DINAMIS
const isPulsa = type === 'CREDIT' || category === 'Top-up Promo';

const badgeClass = isPulsa ? 'bg-yellow-500 text-white' : 'bg-blue-600 text-white';
const categoryLabel = isPulsa ? 'Pulsa' : 'Kuota';
const iconClass = isPulsa ? 'fa-mobile-screen' : 'fa-wifi';
---

<div class="card card-compact bg-white dark:bg-gray-800 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-200 border border-gray-100 dark:border-gray-700 h-full cursor-pointer group">
    <div class="card-body justify-between p-4">
        
        <div class="flex justify-between items-start mb-2">
            <span class={`badge border-none py-3 px-3 font-medium rounded-full text-xs ${badgeClass}`}>
                {categoryLabel}
            </span>
       
            <div class="w-6 h-6 flex items-center justify-end text-gray-400 dark:text-gray-500">
                <i class={`fa-solid ${iconClass} text-lg`}></i>
            </div>
        </div>

        <div class="mb-2">
            <p class="text-[0.625rem] text-gray-400 uppercase tracking-wider font-semibold mb-1">{category}</p>
            
            <h2 class="card-title text-base font-bold text-gray-800 dark:text-white mb-1 leading-tight line-clamp-2">
               {title}
            </h2>
            <p class="text-xs text-gray-500 dark:text-gray-400 leading-relaxed line-clamp-2">
                {description}
            </p>
        </div>

        <div class="card-actions items-end justify-between mt-auto pt-2 border-t border-gray-50 dark:border-gray-700">
            <div>
                <small class="text-gray-400 block text-[0.625rem] leading-tight">Harga</small>
                <div class="text-blue-600 dark:text-blue-400 font-bold text-lg">
                    {price}
                </div>
            </div>
        
            <div class="flex items-center gap-2">
                <a href={`/produk/${id}`} class="btn btn-primary btn-sm px-4 rounded-md text-white no-underline">
                    Beli
                </a>
        
               <button 
                    class="btn btn-ghost btn-sm p-2 rounded-md btn-wishlist group/love text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700" 
                    data-product-id={id}
                >
                  <i class="fa-regular fa-heart text-lg group-active/love:scale-90 transition-transform"></i>
                </button>
            </div>
        </div>
    </div>
</div>