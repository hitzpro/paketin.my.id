---
// src/components/Modal.astro
interface Props {
  id: string;
  title?: string;
  message?: string;
}

const { id, title = "Konfirmasi", message = "Apakah Anda yakin?" } = Astro.props;
---

<div id={id} tabindex="-1" class="hidden fixed inset-0 z-[9999] flex items-center justify-center w-full h-full bg-black/60 backdrop-blur-sm p-4 overflow-x-hidden overflow-y-auto">
    
    <div class="relative w-full max-w-md max-h-full">
        
        <div class="relative bg-white dark:bg-gray-800 rounded-2xl shadow-2xl border border-gray-200 dark:border-gray-700 transform transition-all scale-100 animate-in zoom-in-95 duration-200">
            
            <button type="button" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-gray-900 dark:hover:text-white rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center transition-colors" data-modal-hide={id}>
                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                </svg>
                <span class="sr-only">Close modal</span>
            </button>

            <div class="p-6 text-center">
                <svg class="mx-auto mb-4 text-red-500 w-12 h-12" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
                </svg>
                
                <h3 class="mb-5 text-lg font-normal text-gray-600 dark:text-gray-300">{message}</h3>
                
                <div class="flex justify-center gap-3">
                    <button id={`${id}-confirm-btn`} data-modal-hide={id} type="button" class="text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center shadow-md transition-colors">
                        Ya, Lanjutkan
                    </button>
                    
                    <button data-modal-hide={id} type="button" class="text-gray-900 bg-white border border-gray-200 focus:ring-4 focus:outline-none focus:ring-gray-100 font-medium rounded-lg text-sm px-5 py-2.5 hover:text-blue-700 hover:bg-gray-100 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600 transition-colors">
                        Tidak, Kembali
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script define:vars={{ id }}>
    function setupModal() {
        const modal = document.getElementById(id);
        const hideButtons = document.querySelectorAll(`[data-modal-hide="${id}"]`);
        const showButtons = document.querySelectorAll(`[data-modal-target="${id}"]`);

        if (!modal) return;

        function closeModal() { modal.classList.add('hidden'); }
        function openModal() { modal.classList.remove('hidden'); }

        // Mencegah duplicate listeners dengan flagging (seperti yang kita pelajari sebelumnya)
        hideButtons.forEach(btn => {
            if (btn.dataset.hasListener === "true") return;
            btn.addEventListener('click', closeModal);
            btn.dataset.hasListener = "true";
        });

        showButtons.forEach(btn => {
            if (btn.dataset.hasListener === "true") return;
            btn.addEventListener('click', openModal);
            btn.dataset.hasListener = "true";
        });

        window[`openModal_${id}`] = openModal;
        window[`closeModal_${id}`] = closeModal;
    }
    
    // Setup saat load awal dan saat navigasi (Astro ViewTransitions)
    document.addEventListener('astro:page-load', setupModal);
    
    // Fallback jika tidak menggunakan ViewTransitions
    if (!window.hasRunSetupModal) {
        setupModal();
        window.hasRunSetupModal = true;
    }
</script>