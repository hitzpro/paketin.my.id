---
// src/components/forms/Otp-Form.astro
import Modal from '../ui/Modal.astro';
---

<div class="w-full max-w-[24rem] mx-auto flex flex-col gap-6">

    <form id="otp-form" class="flex flex-col gap-6 w-full">
    
        <div class="text-center space-y-2">
            <p class="text-sm text-gray-600 dark:text-gray-400">
                Kode OTP telah dikirim ke email Anda.
            </p>
            <p class="text-xs text-gray-400 dark:text-gray-500">
                (Cek folder spam jika tidak masuk)
            </p>
        </div>
    
        <div class="flex justify-center gap-2 sm:gap-3" id="otp-inputs">
            <input type="text" maxlength="1" class="otp-input w-10 h-12 sm:w-12 sm:h-14 text-center text-xl font-bold border border-gray-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-800 dark:text-white rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition-all" required />
            <input type="text" maxlength="1" class="otp-input w-10 h-12 sm:w-12 sm:h-14 text-center text-xl font-bold border border-gray-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-800 dark:text-white rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition-all" required />
            <input type="text" maxlength="1" class="otp-input w-10 h-12 sm:w-12 sm:h-14 text-center text-xl font-bold border border-gray-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-800 dark:text-white rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition-all" required />
            <input type="text" maxlength="1" class="otp-input w-10 h-12 sm:w-12 sm:h-14 text-center text-xl font-bold border border-gray-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-800 dark:text-white rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition-all" required />
            <input type="text" maxlength="1" class="otp-input w-10 h-12 sm:w-12 sm:h-14 text-center text-xl font-bold border border-gray-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-800 dark:text-white rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition-all" required />
            <input type="text" maxlength="1" class="otp-input w-10 h-12 sm:w-12 sm:h-14 text-center text-xl font-bold border border-gray-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-800 dark:text-white rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition-all" required />
        </div>
    
        <button type="submit" id="btn-otp-submit" class="w-full text-white bg-green-600 hover:bg-green-700 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-3 text-center shadow-md transition-all">
            Verifikasi
        </button>
        
        <button type="button" id="btn-otp-loading" class="hidden w-full text-white bg-green-400 font-medium rounded-lg text-sm px-5 py-3 text-center cursor-not-allowed justify-center gap-2" disabled>
            <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
            Memverifikasi...
        </button>
    
        <div class="text-center mt-2">
            <button type="button" id="resend-otp" class="text-sm text-blue-600 dark:text-blue-400 hover:underline disabled:text-gray-400 dark:disabled:text-gray-600">
                Kirim Ulang OTP
            </button>
            <span id="countdown" class="text-sm text-gray-500 dark:text-gray-400 ml-2"></span>
        </div>
    
    </form>

    <div class="pt-4 border-t border-gray-200 dark:border-slate-700">
        <button type="button" id="btn-simulate-otp" class="w-full py-2 px-4 border border-dashed border-yellow-500 text-yellow-600 dark:text-yellow-400 bg-yellow-50 dark:bg-yellow-900/10 hover:bg-yellow-100 dark:hover:bg-yellow-900/20 rounded-lg text-xs font-semibold transition-colors flex items-center justify-center gap-2">
            <i class="fa-solid fa-bug"></i> Simulasi OTP (Dev Mode)
        </button>
    </div>

    <div class="text-center">
        <p class="text-sm text-gray-600 dark:text-gray-400">
            Salah nomor atau email? 
            <button 
                type="button"
                data-modal-target="cancel-modal"
                class="font-bold text-red-500 hover:text-red-700 hover:underline transition-colors"
            >
                Batalkan & Edit
            </button>
        </p>
    </div>

</div>

<Modal 
    id="cancel-modal" 
    message="Apakah Anda yakin ingin membatalkan verifikasi? Akun sementara Anda akan dihapus dan Anda harus mendaftar ulang." 
/>

<script>
  import { initOtpForm } from '../../scripts/auth/otp.js';
  
  document.addEventListener('astro:page-load', () => {
      initOtpForm();
  });
</script>