---
import Modal from '../ui/Modal.astro';
---

<div id="forgot-password-container">
    
    <form id="form-request-otp" class="flex flex-col gap-5">
        <div>
            <label for="forgot-email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email Terdaftar</label>
            <div class="flex">
                <span class="inline-flex items-center px-3 text-sm text-gray-500 dark:text-gray-400 bg-gray-100 dark:bg-slate-700 border border-r-0 border-gray-300 dark:border-slate-600 rounded-l-lg">
                    <i class="fa-solid fa-envelope w-4 h-4"></i>
                </span>
                <input type="email" id="forgot-email" class="rounded-none rounded-r-lg bg-white dark:bg-slate-800 border border-gray-300 dark:border-slate-600 text-gray-900 dark:text-white focus:ring-orange-500 focus:border-orange-500 block flex-1 min-w-0 w-full text-sm p-2.5 outline-none placeholder-gray-400 dark:placeholder-gray-500" placeholder="nama@email.com" required>
            </div>
        </div>
        
        <button type="submit" id="btn-request" class="w-full text-white bg-orange-600 hover:bg-orange-700 focus:ring-4 focus:outline-none focus:ring-orange-300 font-medium rounded-lg text-sm px-5 py-3 text-center shadow-md transition-all">
            Kirim Kode OTP
        </button>
        <div class="text-center">
            <p class="text-sm text-slate-600 dark:text-slate-400">
              Sudah ingat passwordnya ? 
              <a href="/auth/login" class="font-bold text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors hover:underline">
                Masuk disini
              </a>
            </p>
          </div>
    </form>

    <form id="form-reset-password" class="hidden flex-col gap-5">
        
        <div class="bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-300 text-xs p-3 rounded-lg mb-2 flex items-start gap-2 border border-blue-100 dark:border-blue-800">
            <i class="fa-solid fa-circle-info mt-0.5"></i>
            <span id="email-sent-info">Kode OTP telah dikirim ke email Anda.</span>
        </div>

        <div>
            <label for="forgot-otp" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Kode OTP</label>
            <input type="text" id="forgot-otp" class="bg-gray-50 border border-gray-300 text-gray-900 text-center text-xl tracking-[0.5em] font-bold rounded-lg focus:ring-orange-500 focus:border-orange-500 block w-full p-2.5 dark:bg-slate-700 dark:border-slate-600 dark:text-white outline-none" placeholder="123456" maxlength="6" required>
        </div>

        <div>
             <label for="new-password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Password Baru</label>
             <div class="relative">
                 <span class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none text-gray-500 dark:text-gray-400">
                    <i class="fa-solid fa-lock"></i>
                 </span>
                 <input type="password" id="new-password" class="pl-10 bg-white border border-gray-300 text-gray-900 rounded-lg focus:ring-orange-500 focus:border-orange-500 block w-full p-2.5 dark:bg-slate-800 dark:border-slate-600 dark:text-white outline-none" placeholder="••••••••" required>
             </div>
        </div>

        <button type="submit" id="btn-reset" class="w-full text-white bg-green-600 hover:bg-green-700 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-3 text-center shadow-md transition-all">
            Ubah Password
        </button>

        <button type="button" id="btn-back" class="text-sm text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-white text-center w-full transition-colors">
            Kembali ke Input Email
        </button>
    </form>

</div>

<Modal 
    id="success_reset_modal" 
    title="Berhasil Diubah!" 
    message="Password Anda telah diperbarui. Silakan login kembali menggunakan password baru."
/>

<script>
  import { initForgotPassword } from '../../scripts/auth/forgot-password.js';
  
  document.addEventListener('astro:page-load', () => {
      initForgotPassword();
  });
</script>