---
// src/components/home/HomeHeader.astro
import HeroCarousel from "../ui/Hero-Banner.astro";
---

<div class="bg-primary dark:bg-gray-900 pt-6 md:pt-[48px] pb-9
            rounded-b-[20px] md:rounded-b-[30px] shadow-xl relative">

  <div class="container mx-auto px-4 sm:px-6 md:px-10 lg:px-12 relative z-10">

    <!-- Header Mobile -->
    <div class="md:hidden flex justify-between items-center text-white mb-6 
                border-b border-white/20 dark:border-white/10 pb-4">
      <div class="flex flex-col">
        <span class="text-xs opacity-80 font-medium text-blue-100 dark:text-gray-400">
          Selamat datang,
        </span>
        <h4 id="home-username" class="text-xl font-bold tracking-wide text-white">
          Guest User
        </h4>
      </div>

      <a id="home-auth-btn" href="/auth/login"
         class="bg-white/10 dark:bg-white/5 p-2.5 rounded-full backdrop-blur-sm 
                active:scale-95 transition-transform flex items-center justify-center 
                border border-white/10 dark:border-white/5 text-white">
        <i id="home-auth-icon" class="fa-solid fa-right-to-bracket text-lg"></i>
      </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 lg:gap-12 items-center">
      
      <!-- Text + Search -->
      <div class="lg:col-span-6 order-2 lg:order-1 text-center lg:text-left mt-2 lg:mt-0">
        <h1 class="hidden lg:block text-4xl xl:text-5xl font-extrabold tracking-tight leading-tight mb-4 text-white">
          Solusi Bayar Tagihan <br/> & Beli Kuota
        </h1>

        <p class="hidden lg:block text-lg text-blue-100 dark:text-gray-400 mb-8 opacity-90">
          Transaksi cepat, aman, dan otomatis 24 jam.
        </p>

        <form action="/pencarian" method="GET" class="relative w-full">
          <div class="flex items-center bg-white dark:bg-gray-900 
                      p-1.5 rounded-full shadow-lg dark:shadow-none
                      border border-transparent dark:border-gray-700 transition-colors">
            <i class="fa-solid fa-magnifying-glass text-gray-400 ml-4 text-lg"></i>
            <input type="text" name="q"
                   class="w-full px-3 py-2.5 bg-transparent outline-none
                          placeholder:text-gray-400 dark:text-gray-200 text-gray-700 font-medium"
                   placeholder="Cari paket data atau pulsa..." autocomplete="off" />
            <button type="submit"
                    class="btn bg-primary dark:bg-blue-600 border-none text-white 
                           hover:bg-blue-800 rounded-full px-6 h-[40px] text-sm font-bold">
              Cari
            </button>
          </div>
        </form>
      </div>

      <!-- Carousel -->
      <div class="lg:col-span-6 order-1 lg:order-2">
        <HeroCarousel />
      </div>

    </div>

  </div>
</div>
