---
// src/components/home/SpecialSection.astro
import ProductCard2 from "../products/Product-Card-v2.astro";

const { specialProducts } = Astro.props;
---

<section>
  <div class="flex justify-between items-center mb-4 px-1">
    <div class="flex items-center gap-1">
      <h3 class="text-base font-bold text-gray-800 dark:text-white">
        Pilihan Spesial
      </h3>
      <span>‚≠ê</span>
    </div>
    <a href="/products" 
       class="text-xs font-bold text-primary dark:text-blue-400 hover:underline">
      Lihat Semua
    </a>
  </div>

  <div class="flex gap-4 overflow-x-auto pb-4 snap-x scrollbar-hide whitespace-nowrap">
    {specialProducts.map((product) => (
      <div class="snap-start inline-block">
        <ProductCard2
          id={product.id}
          title={product.product_name}
          description="Deskripsi singkat produk spesial..."
          price={`Rp ${product.price.toLocaleString()}`}
          category={product.category}
          image="/images/logo.png"
        />
      </div>
    ))}
  </div>
</section>
