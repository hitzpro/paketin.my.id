---
import ProfileContainer from "./ProfileContainer.astro";
---

<ProfileContainer title="Pengaturan Akun">

    <div class="space-y-6">
  
        <div class="p-4 bg-white dark:bg-gray-800 rounded-2xl border border-gray-100 dark:border-gray-700 shadow-sm">
          <h3 class="font-semibold text-gray-800 dark:text-white mb-3">Tampilan</h3>
          
          <div class="flex items-center justify-between mb-4">
            <span class="text-sm text-gray-500 dark:text-gray-400">Ukuran Teks</span>
            <div class="join">
              <button id="btn-font-small" data-size="small" class="btn btn-sm join-item btn-font-size">A</button>
              <button class="btn btn-sm join-item btn-font-size" data-size="medium">A</button>
              <button id="btn-font-large" data-size="large" class="btn btn-sm join-item btn-font-size text-lg">A</button>
            </div>
          </div>
      
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-500 dark:text-gray-400">Mode Gelap</span>
            <input type="checkbox" id="toggle-darkmode" class="toggle toggle-primary" />
          </div>
        </div>
      
        <div class="p-4 bg-white dark:bg-gray-800 rounded-2xl 
                    border border-red-300 dark:border-red-700 border-dashed">
            <h3 class="font-semibold text-gray-800 dark:text-white">
              Hapus Akun
            </h3>
      
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                Menghapus akun akan menghilangkan semua data Anda secara permanen.
            </p>
      
            <button id="btn-delete-account"
                    class="btn btn-sm btn-error mt-4 text-white normal-case">
                Hapus Akun
            </button>
        </div>
      
      </div>

</ProfileContainer>
