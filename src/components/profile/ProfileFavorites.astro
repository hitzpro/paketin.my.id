---
import ProfileContainer from "./ProfileContainer.astro";
---

<ProfileContainer title="Favorit Saya">

  <div id="favorites-grid"
       class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
      <div class="col-span-full text-center py-10">
        <span class="loading loading-spinner loading-lg text-primary"></span>
      </div>
  </div>

  <div id="favorites-empty"
       class="hidden p-8 rounded-2xl text-center
              bg-white dark:bg-gray-800 
              border border-gray-100 dark:border-gray-700">

      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full
                  bg-red-50 dark:bg-red-900/20 text-red-500 mb-4">
          <i class="fa-solid fa-heart-crack text-2xl"></i>
      </div>

      <h3 class="text-lg font-bold">Belum ada Favorit</h3>
      <p class="text-gray-500 dark:text-gray-400 mt-2 text-sm">
        Tandai paket yang Anda suka untuk menyimpannya di sini.
      </p>
      <a href="/" 
         class="mt-4 inline-block btn btn-sm btn-primary rounded-lg normal-case text-white">
        Cari Paket
      </a>
  </div>

</ProfileContainer>
