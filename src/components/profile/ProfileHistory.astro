---
import ProfileContainer from "./ProfileContainer.astro";
---

<ProfileContainer title="Riwayat Transaksi">

  <slot name="filters"></slot>

  <div id="history-list" class="space-y-3 pb-4"></div>

  <div id="history-loading" class="hidden py-12 text-center">
      <span class="loading loading-spinner loading-lg text-primary"></span>
      <p class="text-xs text-gray-400 mt-2 animate-pulse">
        Mengambil data transaksi...
      </p>
  </div>

  <div id="history-empty"
       class="hidden p-8 rounded-2xl text-center
              bg-white dark:bg-gray-800 
              border border-gray-100 dark:border-gray-700 border-dashed">

      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full
                  bg-blue-50 dark:bg-blue-900/30 text-blue-500 mb-4">
          <i class="fa-solid fa-receipt text-2xl"></i>
      </div>

      <h3 class="text-lg font-bold">Belum Ada Transaksi</h3>
      <p class="text-gray-500 dark:text-gray-400 mt-2 text-sm">
        Yuk mulai beli kebutuhan digitalmu sekarang!
      </p>

      <a href="/" 
         class="mt-4 inline-block btn btn-sm btn-primary rounded-lg text-white normal-case shadow-none border-none">
        Beli Sekarang
      </a>
  </div>

</ProfileContainer>
