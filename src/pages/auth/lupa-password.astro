---
export const prerender = false;
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/ui/Navbar.astro';
import ForgotPasswordForm from '../../components/forms/ForgotPassword-Form.astro';
---

<Layout title="Lupa Password - Paketin">
    <div class="flex flex-col min-h-dvh bg-slate-50 dark:bg-slate-900 transition-colors duration-300">
        <header class="hidden md:block sticky top-0 z-50 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md border-b border-gray-100 dark:border-slate-800">
             <Navbar />
        </header>

        <main class="flex-grow flex flex-col justify-center items-center p-4 pb-24 md:pb-8 md:pt-8">
             <div class="w-full max-w-[440px] bg-white dark:bg-slate-800 rounded-2xl md:rounded-3xl shadow-[0_8px_10px_rgb(0,0,0,0.04)] dark:shadow-slate-900/50 border border-gray-300 dark:border-slate-700 p-6 md:p-10 relative overflow-hidden transition-colors duration-300">
                
                <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-orange-400 to-red-500"></div>

                <div class="text-center mb-8">
                    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-orange-50 dark:bg-orange-900/20 text-orange-600 dark:text-orange-400 mb-6 text-2xl">
                         <i class="fa-solid fa-key"></i>
                    </div>
                    <h1 class="text-2xl font-bold text-slate-800 dark:text-white mb-2">Reset Password</h1>
                    <p class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed">
                        Masukkan email yang terdaftar untuk mendapatkan kode verifikasi.
                    </p>
                </div>

                <ForgotPasswordForm />

             </div>
        </main>
    </div>
</Layout>