---
// src/pages/login.astro
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/ui/Navbar.astro';
import BottomNav from '../../components/ui/Bottom-Nav.astro';
import Footer from '../../components/ui/Footer.astro';
import LoginForm from '../../components/forms/Login-Form.astro';
---

<Layout title="Masuk ke Akun">
  
  <div class="flex flex-col min-h-dvh bg-slate-50 dark:bg-slate-900 transition-colors duration-300">

    <header class="hidden md:block sticky top-0 z-50 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md border-b border-gray-100 dark:border-slate-800">
      <Navbar />
    </header>

    <main class="flex-grow flex flex-col justify-center items-center p-4 pb-24 md:pb-8 md:pt-8">
      
      <div class="w-full max-w-[440px] bg-white dark:bg-slate-800 rounded-2xl md:rounded-3xl shadow-[0_8px_10px_rgb(0,0,0,0.04)] dark:shadow-slate-900/50 border border-gray-300 dark:border-slate-700 p-6 md:p-10 relative overflow-hidden transition-colors duration-300">
        
        <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-blue-500 to-purple-500"></div>

        <div class="text-center mb-10">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-blue-50 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 mb-6 text-2xl">
            <i class="fa-solid fa-right-to-bracket"></i>
          </div>

          <h1 class="text-2xl md:text-3xl font-bold text-slate-800 dark:text-white mb-3 tracking-tight transition-colors">
            Selamat Datang Kembali
          </h1>
          <p class="text-slate-500 dark:text-slate-400 text-sm md:text-base leading-relaxed transition-colors">
            Masuk untuk mengelola akun dan aktivitas Anda
          </p>
        </div>

        <LoginForm />
        
      </div>

    </main>

    <footer class="hidden md:block mt-auto bg-white dark:bg-slate-900 border-t border-gray-100 dark:border-slate-800 transition-colors">
      <Footer />
    </footer>

    <div class="block md:hidden fixed bottom-0 w-full z-50 bg-white dark:bg-slate-800 border-t border-gray-200 dark:border-slate-700 shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.05)] transition-colors">
      <BottomNav />
    </div>

  </div>

</Layout>