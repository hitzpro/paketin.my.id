---
// src/pages/onboarding.astro
export const prerender = false; 

import Layout from '../../layouts/Layout.astro';
import SurveyOption from '../../components/forms/Survey-Option.astro';
---

<Layout title="Personalisasi Akun">
  <div class="min-h-dvh bg-slate-50 dark:bg-slate-900 flex flex-col justify-center items-center p-4 font-inter transition-colors duration-300">
    
    <div class="w-full max-w-2xl bg-white dark:bg-slate-800 rounded-3xl shadow-xl shadow-slate-200/50 dark:shadow-slate-900/50 p-6 md:p-10 border border-slate-100 dark:border-slate-700 relative overflow-hidden transition-colors duration-300">
      
      <div class="absolute top-0 left-0 w-full h-1.5 bg-slate-100 dark:bg-slate-700">
        <div class="h-full bg-blue-600 w-1/2 rounded-r-full shadow-[0_0_10px_rgba(37,99,235,0.5)]"></div> 
      </div>

      <div class="text-center mb-10 mt-4 space-y-2">
        <h1 class="text-2xl md:text-3xl font-extrabold text-slate-800 dark:text-white tracking-tight transition-colors">
          Personalisasi Pengalaman Anda âœ¨
        </h1>
        <p class="text-slate-500 dark:text-slate-400 text-sm md:text-base max-w-md mx-auto transition-colors">
          Bantu AI kami mencarikan paket internet yang paling pas buat gaya hidup dan dompetmu.
        </p>
      </div>

      <form id="onboarding-form" class="space-y-10">
        
        <div class="space-y-4">
            <div class="flex items-center gap-2">
                <span class="flex items-center justify-center w-6 h-6 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 text-xs font-bold">1</span>
                <h3 class="text-lg font-bold text-slate-800 dark:text-slate-200 transition-colors">Untuk apa Anda menggunakan internet?</h3>
            </div>
            
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <SurveyOption inputType="checkbox" name="usage" value="gaming" label="Gaming Berat" icon="fa-solid fa-gamepad" />
                <SurveyOption inputType="checkbox" name="usage" value="streaming" label="Streaming Film" icon="fa-solid fa-film" />
                <SurveyOption inputType="checkbox" name="usage" value="social" label="Sosmed & Chat" icon="fa-brands fa-instagram" />
                <SurveyOption inputType="checkbox" name="usage" value="work" label="Kerja / Zoom" icon="fa-solid fa-briefcase" />
            </div>
        </div>

        <div class="space-y-4">
            <div class="flex items-center gap-2">
                <span class="flex items-center justify-center w-6 h-6 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 text-xs font-bold">2</span>
                <h3 class="text-lg font-bold text-slate-800 dark:text-slate-200 transition-colors">Estimasi budget bulanan?</h3>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <SurveyOption name="budget" value="hemat" label="< Rp 50.000" icon="fa-solid fa-piggy-bank" />
                <SurveyOption name="budget" value="sedang" label="Rp 50rb - 100rb" icon="fa-solid fa-wallet" />
                <SurveyOption name="budget" value="sultan" label="> Rp 100.000" icon="fa-solid fa-crown" />
            </div>
        </div>

        <div class="pt-4">
            <button 
                type="submit" 
                id="btn-submit-survey"
                class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-4 rounded-xl shadow-lg shadow-blue-600/20 transition-all hover:-translate-y-0.5 active:translate-y-0 text-lg flex items-center justify-center gap-2"
            >
                <span>Simpan & Lanjutkan</span>
                <i class="fa-solid fa-arrow-right text-sm"></i>
            </button>
        </div>

      </form>
      
      <div class="mt-6 text-center">
          <button type="button" id="btn-skip" class="text-sm text-slate-400 hover:text-slate-600 dark:text-slate-500 dark:hover:text-slate-300 font-medium transition-colors">
              Lewati survei ini (Pakai mode standar)
          </button>
      </div>

    </div>
  </div>
</Layout>

<script>
  import { initOnboardingForm } from '../../scripts/auth/onBoarding.js';
  
  document.addEventListener('astro:page-load', () => {
      initOnboardingForm();
  });
</script>