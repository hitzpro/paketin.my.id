---
// src/pages/profile/index.astro
import Layout from "../../layouts/Layout.astro";
import Navbar from '../../components/ui/Navbar.astro';
import ProfileMobileHeader from "../../components/profile/ProfileMobileHeader.astro";
import ProfileHeader from "../../components/profile/ProfileHeader.astro";
import ProfileTabs from "../../components/profile/Profile-Tabs.astro";
import ProfileForm from "../../components/forms/Profile-Form.astro";
import ProfileHistory from "../../components/profile/ProfileHistory.astro";
import ProfileFavorites from "../../components/profile/ProfileFavorites.astro";
import ProfileSettings from "../../components/profile/ProfileSettings.astro";
import ProfileDeleteAccountModal from "../../components/profile/ProfileDeleteAccountModal.astro";
---

<Layout title="Profil Saya">
  <div class="flex flex-col min-h-dvh">

    <header class="hidden md:block sticky top-0 z-40 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md border-b border-gray-100 dark:border-gray-700">
      <Navbar />
    </header>

    <main class="flex-grow w-full max-w-4xl mx-auto p-4 pb-24 md:pb-8 md:pt-8">

      <ProfileMobileHeader />
      <ProfileHeader />

      <ProfileTabs />

      <div id="content-profile" role="tabpanel" class="animate-in fade-in duration-300">
        <ProfileForm />
      </div>

      <div id="content-history" role="tabpanel" class="hidden animate-in fade-in duration-300">
        <ProfileHistory />
      </div>

      <div id="content-favorites" role="tabpanel" class="hidden animate-in fade-in duration-300">
        <ProfileFavorites />
      </div>

      <div id="content-settings" role="tabpanel" class="hidden animate-in fade-in duration-300">
        <ProfileSettings />
      </div>

      <ProfileDeleteAccountModal />

    </main>
  </div>
</Layout>

<script src="../../scripts/profiles/profile.js"></script>