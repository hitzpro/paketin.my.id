---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/ui/Navbar.astro';
import Footer from '../../components/ui/Footer.astro';
import BottomNav from '../../components/ui/Bottom-Nav.astro';
---

<Layout title="Tentang Kami - Paketin">
    <div class="flex flex-col min-h-dvh bg-white dark:bg-gray-900 transition-colors duration-300">

        <header class="hidden md:block sticky top-0 z-40 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-100 dark:border-gray-800">
          <Navbar />
        </header>
      
        <main class="flex-grow w-full pb-20 md:pb-0">
            
            <div class="md:hidden px-6 pt-6 pb-4 flex items-center gap-3 bg-white dark:bg-gray-900 border-b border-gray-100 dark:border-gray-800">
                <a href="/" class="text-gray-500 dark:text-gray-400 hover:text-blue-600">
                    <i class="fa-solid fa-arrow-left text-lg"></i>
                </a>
                <h1 class="text-xl font-bold text-gray-800 dark:text-white">Tentang Kami</h1>
            </div>
      
            <div class="container mx-auto px-6 py-12 md:py-20 max-w-7xl">
                
                <!-- SECTION 1 -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-16 mb-16 md:mb-24">
                    <div>
                        <span class="text-blue-600 dark:text-blue-400 font-bold tracking-wider text-xs md:text-sm uppercase mb-3 md:mb-4 block">
                            SIAPA KAMI
                        </span>
                        <h2 class="text-3xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white leading-tight">
                            Memberikan Kemudahan Isi Pulsa & Kuota Setiap Hari
                        </h2>
                    </div>
                    
                    <div class="flex items-center">
                        <p class="text-gray-500 dark:text-gray-400 leading-relaxed text-base md:text-lg">
                            Paketin hadir untuk memberikan pengalaman isi ulang pulsa dan kuota yang lebih cepat,
                            lebih mudah, dan lebih nyaman. Misi kami adalah membuat kegiatan digital kamu tetap
                            lancar tanpa ribet — cukup beberapa klik, semuanya langsung beres.
                        </p>
                    </div>
                </div>
      
                <!-- SECTION 2 -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 mb-16 md:mb-24">
                    
                    <!-- Visi -->
                    <div class="relative h-[420px] md:h-[500px] rounded-3xl overflow-hidden group">
                        <img 
                            src="https://images.unsplash.com/photo-1497366216548-37526070297c?q=80&w=2301&auto=format&fit=crop" 
                            alt="Office Vision" 
                            class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                        >
                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
      
                        <div class="absolute bottom-0 left-0 right-0 bg-white dark:bg-gray-800 rounded-t-3xl p-8 md:p-10 transition-colors duration-300">
                            <h3 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-3">Visi Kami</h3>
                            <p class="text-gray-500 dark:text-gray-400 text-base leading-relaxed">
                                Menjadi platform isi ulang digital yang paling dipercaya dan paling mudah digunakan oleh semua orang di Indonesia.
                            </p>
                        </div>
                    </div>
      
                    <!-- Misi -->
                    <div class="relative h-[420px] md:h-[500px] rounded-3xl overflow-hidden group">
                        <img 
                            src="https://images.unsplash.com/photo-1522071820081-009f0129c71c?q=80&w=2070&auto=format&fit=crop" 
                            alt="Teamwork Goal" 
                            class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                        >
                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
      
                        <div class="absolute bottom-0 left-0 right-0 bg-white dark:bg-gray-800 rounded-t-3xl p-8 md:p-10 transition-colors duration-300">
                            <h3 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-3">Misi Kami</h3>
                            <p class="text-gray-500 dark:text-gray-400 text-base leading-relaxed">
                                Menghadirkan layanan cepat, harga jelas, dan pengalaman pengguna yang sederhana —
                                sehingga kamu bisa mendapatkan pulsa & kuota kapan pun, tanpa repot.
                            </p>
                        </div>
                    </div>
      
                </div>
      
                <!-- SECTION 3 -->
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
                    <div class="bg-white dark:bg-gray-800 p-6 md:p-8 rounded-2xl border border-gray-200 dark:border-gray-700 text-center hover:shadow-lg hover:border-blue-200 dark:hover:border-blue-500 transition-all duration-300">
                        <h4 class="text-4xl md:text-5xl font-bold text-blue-600 dark:text-blue-400 mb-2">92%</h4>
                        <span class="text-gray-500 dark:text-gray-400 text-sm md:text-base font-medium">Pengguna Puas</span>
                    </div>
      
                    <div class="bg-white dark:bg-gray-800 p-6 md:p-8 rounded-2xl border border-gray-200 dark:border-gray-700 text-center hover:shadow-lg hover:border-blue-200 dark:hover:border-blue-500 transition-all duration-300">
                        <h4 class="text-4xl md:text-5xl font-bold text-blue-600 dark:text-blue-400 mb-2">24/7</h4>
                        <span class="text-gray-500 dark:text-gray-400 text-sm md:text-base font-medium">Layanan Aktif</span>
                    </div>
      
                    <div class="bg-white dark:bg-gray-800 p-6 md:p-8 rounded-2xl border border-gray-200 dark:border-gray-700 text-center hover:shadow-lg hover:border-blue-200 dark:hover:border-blue-500 transition-all duration-300">
                        <h4 class="text-4xl md:text-5xl font-bold text-blue-600 dark:text-blue-400 mb-2">14.2k+</h4>
                        <span class="text-gray-500 dark:text-gray-400 text-sm md:text-base font-medium">Transaksi Berhasil</span>
                    </div>
      
                    <div class="bg-white dark:bg-gray-800 p-6 md:p-8 rounded-2xl border border-gray-200 dark:border-gray-700 text-center hover:shadow-lg hover:border-blue-200 dark:hover:border-blue-500 transition-all duration-300">
                        <h4 class="text-4xl md:text-5xl font-bold text-blue-600 dark:text-blue-400 mb-2">12+</h4>
                        <span class="text-gray-500 dark:text-gray-400 text-sm md:text-base font-medium">Mitra Terpercaya</span>
                    </div>
                </div>
      
            </div>
      
        </main>
      
        <footer class="hidden md:block mt-auto bg-white dark:bg-gray-900 border-t border-gray-100 dark:border-gray-800">
          <Footer />
        </footer>
      
        <div class="block md:hidden fixed bottom-0 w-full z-50 bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800 shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.05)]">
          <BottomNav />
        </div>
      
      </div>
      
</Layout>