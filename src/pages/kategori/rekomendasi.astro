---
// src/pages/kategori/rekomendasi.astro
export const prerender = false;
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/ui/Navbar.astro';
import Footer from '../../components/ui/Footer.astro';
import BottomNav from '../../components/ui/Bottom-Nav.astro';

// TIDAK ADA LOGIC SERVER SIDE YANG BERAT DI SINI
// Biarkan halaman load secepat kilat, baru data masuk via JS.
---

<Layout title="Rekomendasi Spesial - Paketin">
    <Navbar />

    <main class="pb-32 min-h-screen bg-gray-50 dark:bg-gray-900 font-inter transition-colors duration-300">
        
        <div class="relative bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 pt-4 pb-6 px-4 shadow-sm">
            <div class="container mx-auto max-w-6xl">
          
              <!-- Flex container: desktop row, mobile column -->
              <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
          
                <!-- LEFT SIDE: Back + Badge + Title + Subtitle -->
                <div class="flex flex-col gap-4">
                  <div class="flex items-center gap-3">
                    <a href="/products" class="btn btn-circle btn-sm btn-ghost bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 border-none text-gray-600 dark:text-gray-300">
                      <i class="fa-solid fa-arrow-left"></i>
                    </a>
                    <span class="px-3 py-1 bg-indigo-100 dark:bg-indigo-900/30 text-indigo-700 dark:text-indigo-300 text-xs font-bold rounded-full uppercase tracking-wider">
                      âœ¨ Personal AI
                    </span>
                  </div>
                  <div class="flex flex-col">
                    <h1 class="text-2xl md:text-4xl font-extrabold text-gray-900 dark:text-white tracking-tight">
                      Kurasi Spesial Untukmu
                    </h1>
                    <p class="text-sm md:text-base text-gray-500 dark:text-gray-400 max-w-lg">
                      Rekomendasi paket terbaik berdasarkan gaya belanjamu.
                    </p>
                  </div>
                </div>
          
                <!-- RIGHT SIDE: Search Bar -->
                <div class="w-full md:w-80 lg:w-96">
                  <div class="relative">
                    <input 
                      id="search-bar"
                      type="text"
                      placeholder="Cari paket, kuota, atau pulsa..."
                      class="input input-bordered w-full rounded-xl pl-10 dark:bg-gray-900 dark:border-gray-700"
                    />
                    <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                  </div>
                </div>
          
              </div>
            </div>
          </div>
          
        

        <div class="container mx-auto px-4 mt-6 max-w-6xl space-y-10" id="recommendation-content">
            
            <div id="loading-skeleton" class="space-y-8">
                <div class="h-64 bg-gray-200 dark:bg-gray-800 rounded-3xl animate-pulse"></div>
                <div class="h-40 bg-gray-200 dark:bg-gray-800 rounded-2xl animate-pulse"></div>
            </div>

            </div>
    </main>

    <Footer />
    <BottomNav />
</Layout>

<script>
    import { initRecommendationPage,initLiveSearch } from '../../scripts/pages/rekomendasi.js';
    
    document.addEventListener('astro:page-load', () => {
        initRecommendationPage();
        initLiveSearch();

    });
</script>